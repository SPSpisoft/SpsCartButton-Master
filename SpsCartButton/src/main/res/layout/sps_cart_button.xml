<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewBase"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sps_lpr_sz_100">

    <!--    <RelativeLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent">-->


    <RelativeLayout
        android:id="@+id/cButtonRly"
        android:layout_marginStart="@dimen/sps_lpr_sz_50"
        android:layout_marginEnd="@dimen/sps_lpr_sz_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:id="@+id/mainView"
            app:cardBackgroundColor="@android:color/holo_red_light"
            app:cardElevation="1dp"
            app:rippleColor="@color/colorPrimary"
            app:strokeColor="@android:color/holo_red_dark"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_centerInParent="true"
        android:weightSum="2"
        android:layout_toEndOf="@+id/cv_s"
        android:layout_toStartOf="@+id/cv_e"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/vText"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sps_txt_sz_18"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:maxLines="1"
            android:singleLine="true"
            tools:ignore="EllipsizeMaxLines,HardcodedText"/>

        <TextView
            android:id="@+id/vTextDesc"
            android:layout_weight="1"
            android:textColor="@android:color/darker_gray"
            android:gravity="top|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sps_txt_sz_10"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:maxLines="1"
            android:singleLine="true"
            tools:ignore="EllipsizeMaxLines,HardcodedText"/>

    </LinearLayout>


    <TextView
        android:id="@+id/vTextCnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:clickable="false"
        android:text="0"
        android:textSize="40sp" />

    <com.spisoft.spcircleview.CircleView
        android:id="@+id/cv_s"
        app:cv_strokeColorValue="@android:color/holo_red_light"
        android:clickable="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        android:layout_width="@dimen/sps_lpr_sz_100"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true">
    </com.spisoft.spcircleview.CircleView>

    <RelativeLayout
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/cv_s"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/vIcon"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:padding="@dimen/sps_lpr_sz_25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <com.spisoft.spcircleview.CircleView
        android:id="@+id/cv_e"
        app:cv_strokeColorValue="@android:color/holo_red_light"
        android:clickable="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_width="@dimen/sps_lpr_sz_100"
        android:layout_height="match_parent">
    </com.spisoft.spcircleview.CircleView>

    <RelativeLayout
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/cv_e"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/vIconE"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_shopping_cart_24"
            android:padding="@dimen/sps_lpr_sz_25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:id="@+id/rlyIconE"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/vTextCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:clickable="false"
                android:text="0"
                android:textSize="40sp" />
        </RelativeLayout>
    </RelativeLayout>


    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:id="@+id/cProgressStart"
        android:layout_alignParentStart="true"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.github.rahatarmanahmed.cpv.CircularProgressView>

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:id="@+id/cProgressEnd"
        android:layout_alignParentEnd="true"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.github.rahatarmanahmed.cpv.CircularProgressView>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/vProgressHoz"
        style="?android:attr/progressBarStyleHorizontal"
        android:visibility="visible"
        android:indeterminate="false"
        android:layout_toEndOf="@+id/cv_s"
        android:layout_toStartOf="@+id/cv_e"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.core.widget.ContentLoadingProgressBar>


</RelativeLayout>

